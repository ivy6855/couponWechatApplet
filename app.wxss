/**app.wxss**/
@import 'styles/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 


.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 0rpx;
}
.goods-box{
  width: 370rpx;
  height: 520rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.goods-box image{
  width: 370rpx;
  height: 370rpx;
}
.goods-box .goods-title{
  padding: 0 10rpx;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goods-box .goods-info{
  padding: 0 10rpx;
  display: flex;
  flex-direction:column;
}
.goods-box .goods-info .price-info{
  display: flex;
  justify-content: space-between;
  line-height: 48rpx;
}
.goods-box .goods-info  .original{
  line-height: auto;
  color: #8F8F8F;
  text-decoration:line-through;
}

.goods-box .coupon-info{
  display: flex;
  justify-content:space-between;
}
.goods-price{
  font-size: 14px;
  color: #B20F3C;
}
.goods-coupon{
  display: inline-block;
  font-size: 12px;
  padding:2rpx 10rpx;
  background-color:#ED6078;
  color:#FFF;
  border-radius:4rpx;

}
.goods-volume{
  display: inline-block;
  font-size: 12px;
  color: #8F8F8F;
}

.goods-title .taobao-logo{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  vertical-align: text-bottom;
  margin-right: 5rpx;
}
.goods-title .taobao-logo image{
  width: 100%;
  height: 100%;
  border-radius:6rpx;
}

.flex-space-row{
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.flex-row{
  display: flex;
  flex-flow: row;
  justify-content:flex-start;
}
.my-loading{
  text-align: center;
  font-size: 20rpx;
  width: 750rpx;
  position: relative;
  background-color: #FFFFFF;
}
.my-loading text{
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  margin: 0 auto;
}

.original-price{
  line-height: auto;
  color: #8F8F8F;
  text-decoration:line-through;
}

.to-top{
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
  height: 60rpx;
  width: 60rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
.to-top image{
  height: 100%;
  width:100%;
}

.tag{
  display: inline-block;
  font-size: 12px;
  padding: 6rpx 20rpx;
  background-color:#F1F2F4;
  color: #000;
  border-radius: 4rpx;
  margin-left: 20rpx;
}
.division{
  height: 1rpx;
  border-top:1rpx solid #D8D8D8;
  box-sizing: border-box;
}