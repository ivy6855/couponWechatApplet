/* pages/my/index.wxss */
page{
  background-color: #EEEEEE;
}
.info-container{
  background-color: #EB605A;
  width: 750rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;  
}
.user-info{
  width:750rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding: 50rpx 0 50rpx 20rpx;
  display: flex;
}
.user-info image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100rpx;
}
.user-info .nick-name{
  display: inline-block;
  font-size: 16px;
  color: #FFF;
  margin-left: 20rpx;
}
.info-container .score{
  margin-top: 70rpx;
  width: 280rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #7c7c7c;
  font-size: 14px;
  text-align: right;
  background-color: rgba(255, 255, 255, 0.6);
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}


.my-container{
  width: 750rpx;
}


