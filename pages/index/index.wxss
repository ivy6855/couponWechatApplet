/* pages/index2/index.wxss */

.container {
  background-color: #F2f2f2;
  min-height: 100%;
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:375rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:562.5rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.search-container{
  position: absolute;
  top: 40rpx;
  width: 650rpx;
  left: 0;
  right: 0;
  background-color: rgba(255,255,255,0.6);
  border-radius: 30rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  padding-top:auto;
  padding-left:20rpx;
  padding-bottom:auto;
  margin:auto;
  height:60rpx;
}
.search-container input{
  font-size: 12px;
  width: 500rpx;
  padding-left:20rpx;
}



.type-container{
  display: flex;
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 10rpx 0;
  background-color: #FFF;
}
.type-box{
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
  overflow: hidden;
  text-align: center;
  font-size: 12px;
  color:#3f3f3f;
  padding:10rpx 0;
}
.type-box image{
  width:100rpx;
  height:100rpx;
}

.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 0rpx;
}
.goods-box{
  width: 370rpx;
  height: 500rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-size: 14px;
}
.goods-box image{
  width: 370rpx;
  height: 370rpx;
}
.goods-box .goods-info{
  padding: 0 20rpx;
}
.goods-box .coupon-info{
  display: flex;
  justify-content:space-between;
}
.goods-price{
  font-size: 14px;
  color: #B20F3C;
}
.goods-coupon{
  display: inline-block;
  font-size: 12px;
  padding:2rpx 10rpx;
  background-color:#ED6078;
  color:#FFF;
  border-radius:4rpx;

}
.goods-volume{
  display: inline-block;
  font-size: 12px;
  color: #8F8F8F;
}