/* pages/detail/index.wxss */

.container {
  background-color: #FFFFFF;
  min-height: 100%;
  font-size: 12px;
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 750rpx;
  height:750rpx;
  box-sizing: border-box;
}

swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}


.goods-info{
  background-color: #FFFFFF;
  padding: 20rpx 20rpx;
  width:750rpx;
  box-sizing: border-box;
}

.coupon-tag{
  padding: 1rpx 10rpx;
  display: inline-block;
  color: #FFFFFF;
  font-size: 10px;
  /* background-color: blue; */
  background: linear-gradient(to right, #F29C38 , #EB3F31);
  border-radius: 4rpx;
}
.coupon-price{
  display: inline-block;
  color: #DE2F21;
  font-size: 16px;
  margin-left: 20rpx;
}
.coupon-total{
  color: #666666;
}


.coupon-con{
  width: 750rpx;
  /* padding: 0 40rpx; */
  text-align: center;
  background-color: #FFFFFF;
  margin-top: 20rpx;
}

.coupon-con .coupon-paper{
  width: 680rpx;
  height: 200rpx;
  background: linear-gradient(to right, #F29C38 , #EB3F31);
  color: #FFFFFF;
  font-size: 36rpx;
  position: relative;
  display: inline-block;
  border-radius: 16rpx;
}

.coupon-paper .paper{
  display: inline-block;
  width:340rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}
.coupon-paper .get{
  width: 240rpx;
  text-align: center;
  display: inline-block;
  line-height: 160rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  height: 160rpx;
  /* border-left: 4rpx #FFF dotted;  */

    /* background-image: linear-gradient(to bottom, #ccc 0%, #ccc 50%, transparent 50%);
    background-size: 10px 1px;
    background-repeat: repeat-x; */
}
.dotted{
  width: 30rpx;
  height: 60rpx;
  /* border-radius: 40rpx; */
  background-color: #FFFFFF;
  display: inline-block;
  position: absolute;
  top: 70rpx;
  z-index: 1;
}
.dotted.l{
  left: 0;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.dotted.r{
  right: 0;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.toast{
  height: 100%;
  width:100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top:0;
  bottom:0;
  z-index:999;
  right: 0;
  left: 0;
  font-size: 12px;
  padding: 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.toast .taobao{
  margin-top: 100rpx;
  width: 690rpx;
  display: flex;
}
.toast .taobao text{
  width: 100%;
  background-color: #FFFFFF;
  border: 1px dashed #EB3F31;
  border-radius: 10rpx;
  text-align: center;
  padding: 20rpx;
}
.toast .tip{
  margin-top: 20rpx;
  color: #FFF;
}
.toast .close{
  margin-top: 60rpx;
  text-align: center;
}

.original-price{
  display: inline;
  margin-left: 20rpx;
}